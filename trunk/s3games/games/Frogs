[BOARD]    
image=frogsbackground.png

[ELEMENT TYPES]
name=greenFrog
states=1
image=greenFrog.png
point=1,1

name=redFrog
states=1
image=redFrog.png
point=1,1

[LOCATION TYPES]
name=stone
image=stone.png
point=1,1

[LOCATIONS]
name=s(1)
type=stone
point=40,250
shape=circle(30)
angles=10,20,30,40,50

name=s(2)
type=stone
point=130,250
shape=circle(30)
angles=10,20,30,40,50

name=s(3)
type=stone
point=220,250
shape=circle(30)
